<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_feed_icon"
            android:layout_marginLeft="@dimen/default_spacing"
            android:layout_marginRight="@dimen/default_spacing"
            android:layout_marginTop="@dimen/default_spacing"
            android:src="@mipmap/ic_launcher"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mislav Juuuur"
            android:layout_marginTop="@dimen/default_spacing"
            android:padding="@dimen/micro_spacing"
            android:layout_toRightOf="@+id/news_feed_icon"
            android:id="@+id/full_name"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20 mins ago"
            android:layout_marginTop="@dimen/default_spacing"
            android:padding="@dimen/micro_spacing"
            android:layout_alignParentRight="true"
            android:id="@+id/created_at"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/full_name"
            android:padding="@dimen/micro_spacing"
            android:layout_toRightOf="@+id/news_feed_icon"
            android:id="@+id/nick"
            tools:text="\@mjurinic"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nick"
            android:id="@+id/description"
            android:padding="@dimen/micro_spacing"
            android:layout_toRightOf="@+id/news_feed_icon"
            tools:text="Najveci fag na cijelom svijetu"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:padding="@dimen/micro_spacing"
            android:id="@+id/comments_count"
            android:layout_toRightOf="@+id/news_feed_icon"
            tools:text="25 comments"
            />

</RelativeLayout>