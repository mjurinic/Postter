<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/default_spacing"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/search_profile_thumbnail"
        android:layout_width="48dp"
        android:background="@mipmap/ic_launcher"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_marginLeft="@dimen/smaller_spacing"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_profile_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingBottom="@dimen/nano_spacing"
            tools:text="Imenko Prezimenko"/>

        <TextView
            android:id="@+id/search_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="\@iprezimenko"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_search_item_follow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/plus_orange"/>

    </LinearLayout>

</LinearLayout>